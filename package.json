{
  "name": "safe-npm-updater",
  "version": "1.0.0",
  "description": "Intelligent npm package updater with safety checks, impact analysis, and rollback capabilities",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "smart-updater": "./dist/cli/index.js"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/cli/index.ts",
    "prepublishOnly": "npm run build",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
  },
  "keywords": [
    "npm",
    "update",
    "dependencies",
    "package-manager",
    "cli",
    "smart-updater",
    "rollback",
    "testing"
  ],
  "author": "zubair-ra",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zubair-ra/smart-updater.git"
  },
  "bugs": {
    "url": "https://github.com/zubair-ra/smart-updater/issues"
  },
  "homepage": "https://github.com/zubair-ra/smart-updater#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "execa": "^9.6.0",
    "inquirer": "^12.9.6",
    "listr2": "^9.0.4",
    "npm-check-updates": "^19.0.0",
    "ora": "^9.0.0",
    "pacote": "^21.0.3",
    "safe-npm-updater": "^1.0.0",
    "semver": "^7.7.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.6.2",
    "@types/pacote": "^11.1.8",
    "@types/semver": "^7.7.1",
    "eslint": "^9.36.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
